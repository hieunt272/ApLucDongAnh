@{
    ViewBag.Title = "RedirectConfig";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Cấu hình chuyển hướng 301</h2>

<div class="box_content mt-0">
    
    @using (Html.BeginForm())
    {
        if (ViewBag.Result == 1)
        {
            <div class="alert alert-success">Cập nhật thành công</div>
        }
        <p>Cú pháp: <strong>fromUrl -> toUrl</strong></p>
        <div class="form-group">
            <textarea rows="20" class="form_control" name="Config">@ViewBag.Config</textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn-search">Cập nhật</button>
        </div>
    }
</div>
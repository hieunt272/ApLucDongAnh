@model ApLucDongAnh.ViewModel.InsertProjectCatViewModel
@{
    ViewBag.Title = "Cập nhật danh mục";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Cập nhật danh mục</h2>
<a class="btn quick-link" id="create-cat" href="#list-cat"><i class="far fa-list mr-1"></i> Danh sách danh mục</a>
<div class="box_content">
    <div class="row">
        <div class="col-sm-12">
            @using (Html.BeginForm("UpdateCategory", "ProjectVcms", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.ProjectCategory.Id)
                <table class="form_table form-table-cat">
                    <tr>
                        <td class="form_name">@Html.LabelFor(a => Model.ProjectCategory.ParentId)</td>
                        <td class="form_text">@Html.DropDownListFor(a => Model.ProjectCategory.ParentId, (SelectList)Model.RootCats, "Danh mục cha", new { @class = "form_control w300" })</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(a => Model.ProjectCategory.CategoryName)</td>
                        <td class="form_text">@Html.EditorFor(a => Model.ProjectCategory.CategoryName)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(a => Model.ProjectCategory.Description)</td>
                        <td class="form_text">@Html.EditorFor(a => Model.ProjectCategory.Description)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(model => model.ProjectCategory.CoverImage)</td>
                        <td class="form_text">
                            @Html.TextBoxFor(model => model.ProjectCategory.CoverImage, new { type = "file" })
                            <span class="red-warring">Chấp nhận ảnh jpg, png, gif, jpeg < 4MB</span>
                        </td>
                    </tr>
                    @if (Model.ProjectCategory.CoverImage != null)
                    {
                        <tr id="ImgPreview">
                            <td class="form_name"></td>
                            <td class="form_text">
                                <img class="img-border mb-2" src="@Path.Combine("/images/projectCategory/", Model.ProjectCategory.CoverImage)" />
                                <br /><a href="javascript:;" onclick="$('#ImgPreview').hide(); $('#CurrentFile').val('');"><img src="/Content/admin/icon-delete-red.png" alt="" style="vertical-align: middle; margin-top: 0; height: 10px;" /> Xóa ảnh</a>
                                <input type="hidden" name="CurrentFile" id="CurrentFile" value="@Model.ProjectCategory.CoverImage" />
                            </td>
                        </tr>

                    }
                    <tr>
                        <td class="form_name">@Html.LabelFor(a => Model.ProjectCategory.CategorySort)</td>
                        <td class="form_text">@Html.EditorFor(a => Model.ProjectCategory.CategorySort)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(a => Model.ProjectCategory.ShowMenu)</td>
                        <td class="form_text">@Html.CheckBoxFor(a => Model.ProjectCategory.ShowMenu)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(a => Model.ProjectCategory.CategoryActive)</td>
                        <td class="form_text">@Html.CheckBoxFor(a => Model.ProjectCategory.CategoryActive, new { @checked = "checked" })</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(a => Model.ProjectCategory.Url)</td>
                        <td class="form_text">@Html.EditorFor(a => Model.ProjectCategory.Url)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(a => Model.ProjectCategory.TitleMeta)</td>
                        <td class="form_text">@Html.EditorFor(a => Model.ProjectCategory.TitleMeta)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(a => Model.ProjectCategory.DescriptionMeta)</td>
                        <td class="form_text">@Html.EditorFor(a => Model.ProjectCategory.DescriptionMeta)</td>
                    </tr>
                    <tr>
                        <td class="form_name"></td>
                        <td class="form_text">
                            <input type="submit" class="btn quick-link" value="Cập nhật" />
                        </td>
                    </tr>
                </table>
            }
        </div>
        <div class="col-sm-12">
            @Html.Action("ListCategory", "ProjectVcms")
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#thumb').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]); // convert to base64 string
            }
        }
        $("#Image").change(function () {
            readURL(this);
        });
        function triggerImage() {
            $('.file-select').trigger('click');
        }
        function changeImage(event) {
            $('#image-name').html($('.file-select').val());
        }
    </script>
}
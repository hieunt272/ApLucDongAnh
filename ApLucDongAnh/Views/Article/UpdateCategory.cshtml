@model ApLucDongAnh.ViewModel.InsertArticleCatViewModel
@{
    ViewBag.Title = "Cập nhật Danh mục bài viết";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Cập nhật Danh mục</h2>
<a class="btn quick-link" id="create-cat" href="#list-cat"><i class="far fa-list mr-1"></i> Danh sách danh mục</a>
<div class="box_content">
    <div class="row">
        <div class="col-sm-12 col-lg-12">
            @using (Html.BeginForm("UpdateCategory", "Article", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.ArticleCategory.Id)
                <table class="form_table form-table-cat">
                    <tr>
                        <td class="form_name">@Html.LabelFor(model => model.ArticleCategory.ParentId)</td>
                        <td class="form_text">@Html.DropDownListFor(model => model.ArticleCategory.ParentId, (SelectList)Model.RootCats, "Danh mục cha", new { @class = "form_control w300" })</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(model => model.ArticleCategory.TypePost)</td>
                        <td class="form_text">@Html.EnumDropDownListFor(model => model.ArticleCategory.TypePost, new { @class = "form_control w300" })</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(model => model.ArticleCategory.CategoryName)</td>
                        <td class="form_text">@Html.EditorFor(model => model.ArticleCategory.CategoryName)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(model => model.ArticleCategory.Description)</td>
                        <td class="form_text">
                            @Html.EditorFor(model => model.ArticleCategory.Description)
                            @Html.ValidationMessageFor(a => Model.ArticleCategory.Description)
                        </td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(model => model.ArticleCategory.Image)</td>
                        <td class="form_text">
                            @Html.TextBoxFor(model => model.ArticleCategory.Image, new { type = "file" })
                            <span class="red-warring">Chấp nhận ảnh jpg, png, gif, jpeg < 4MB</span>
                        </td>
                    </tr>
                    @if (Model.ArticleCategory.Image != null)
                    {
                        <tr id="ImgPreview">
                            <td class="form_name"></td>
                            <td class="form_text">
                                <img class="img-border mb-2" src="@Path.Combine("/images/articleCategory/", Model.ArticleCategory.Image)" />
                                <br /><a href="javascript:;" onclick="$('#ImgPreview').hide(); $('#CurrentFile').val('');"><img src="/Content/admin/icon-delete-red.png" alt="" style="vertical-align: middle; margin-top: 0; height: 10px;" /> Xóa ảnh</a>
                                <input type="hidden" name="CurrentFile" id="CurrentFile" value="@Model.ArticleCategory.Image" />
                            </td>
                        </tr>
                    }
                    <tr>
                        <td class="form_name">@Html.LabelFor(model => model.ArticleCategory.CategorySort)</td>
                        <td class="form_text">@Html.EditorFor(model => model.ArticleCategory.CategorySort)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(model => model.ArticleCategory.ShowMenu)</td>
                        <td class="form_text">@Html.EditorFor(model => model.ArticleCategory.ShowMenu)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(model => model.ArticleCategory.ShowFooter)</td>
                        <td class="form_text">@Html.EditorFor(model => model.ArticleCategory.ShowFooter)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(model => model.ArticleCategory.CategoryActive)</td>
                        <td class="form_text">@Html.CheckBoxFor(model => model.ArticleCategory.CategoryActive, new { @checked = "checked" })</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(model => model.ArticleCategory.Url)</td>
                        <td class="form_text">@Html.EditorFor(model => model.ArticleCategory.Url)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(model => model.ArticleCategory.TitleMeta)</td>
                        <td class="form_text">@Html.EditorFor(model => model.ArticleCategory.TitleMeta)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(model => model.ArticleCategory.DescriptionMeta)</td>
                        <td class="form_text">@Html.EditorFor(model => model.ArticleCategory.DescriptionMeta)</td>
                    </tr>
                    <tr>
                        <td class="form_name"></td>
                        <td class="form_text">
                            <input type="submit" class="btn quick-link" value="Cập nhật" />
                        </td>
                    </tr>
                </table>
            }
        </div>
        <div class="col-sm-12 col-lg-12">
            @Html.Action("ListCategory", "Article")
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#thumb').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]); // convert to base64 string
            }
        }
        $("#Image").change(function () {
            readURL(this);
        });
        function triggerImage() {
            $('.file-select').trigger('click');
        }
        function changeImage(event) {
            $('#image-name').html($('.file-select').val());
        }
    </script>
}


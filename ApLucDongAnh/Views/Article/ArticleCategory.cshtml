@model ApLucDongAnh.ViewModel.InsertArticleCatViewModel
@{
    ViewBag.Title = "Thêm danh mục";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Thêm Danh mục</h2>
@if (ViewBag.ArticleCat == "success")
{
    <div id="AlertBox" class="alert alert-success"><strong>Thêm mới danh mục thành công</strong></div>
}
@if (ViewBag.ArticleCat == "update")
{
    <div id="AlertBox" class="alert alert-success"><strong>Cập nhật danh mục thành công</strong></div>
}
<a class="btn quick-link" id="create-cat" href="#list-cat"><i class="far fa-list mr-1"></i> Danh sách danh mục</a>
<div class="box_content">
    <div class="row">
        <div class="col-sm-12 col-lg-12">
            @using (Html.BeginForm("ArticleCategory", "Article", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary(true)
                <table class="form_table form-table-cat">
                    <tr>
                        <td class="form_name">@Html.LabelFor(model => model.ArticleCategory.ParentId)</td>
                        <td class="form_text">@Html.DropDownListFor(model => model.ArticleCategory.ParentId, (SelectList)Model.RootCats, "Danh mục cha", new { @class = "form_control w300" })</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(model => model.ArticleCategory.TypePost)</td>
                        <td class="form_text">@Html.EnumDropDownListFor(model => model.ArticleCategory.TypePost, new { @class = "form_control w300" })</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(a => Model.ArticleCategory.CategoryName)</td>
                        <td class="form_text">@Html.EditorFor(a => Model.ArticleCategory.CategoryName)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(a => Model.ArticleCategory.Description)</td>
                        <td class="form_text">
                            @Html.EditorFor(a => Model.ArticleCategory.Description)
                            @Html.ValidationMessageFor(a => Model.ArticleCategory.Description)
                        </td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(a => Model.ArticleCategory.Image)</td>
                        <td class="form_text">
                            @Html.TextBoxFor(a => Model.ArticleCategory.Image, new { type = "file" })
                            <span class="red-warring">
                                Chấp nhận ảnh jpg, png, gif, jpeg < 4MB
                            </span>
                        </td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(a => Model.ArticleCategory.CategorySort)</td>
                        <td class="form_text">@Html.EditorFor(a => Model.ArticleCategory.CategorySort)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(a => Model.ArticleCategory.ShowMenu)</td>
                        <td class="form_text">@Html.EditorFor(a => Model.ArticleCategory.ShowMenu)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(a => Model.ArticleCategory.ShowFooter)</td>
                        <td class="form_text">@Html.EditorFor(a => Model.ArticleCategory.ShowFooter)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(a => Model.ArticleCategory.CategoryActive)</td>
                        <td class="form_text">@Html.CheckBoxFor(a => Model.ArticleCategory.CategoryActive, new { @checked = "checked" })</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(a => Model.ArticleCategory.Url)</td>
                        <td class="form_text">@Html.EditorFor(a => Model.ArticleCategory.Url)</td>
                    </tr>
                    <tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(a => Model.ArticleCategory.TitleMeta)</td>
                        <td class="form_text">@Html.EditorFor(a => Model.ArticleCategory.TitleMeta)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(a => Model.ArticleCategory.DescriptionMeta)</td>
                        <td class="form_text">@Html.EditorFor(a => Model.ArticleCategory.DescriptionMeta)</td>
                    </tr>
                    <tr>
                        <td class="form_name"></td>
                        <td class="form_text">
                            <input type="submit" class="btn quick-link" value="Thêm mới" />
                        </td>
                    </tr>
                </table>
            }
        </div>
        <div class="col-sm-12 col-lg-12">
            @Html.Action("ListCategory", "Article")
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#thumb').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]); // convert to base64 string
            }
        }
        $("#Image").change(function () {
            readURL(this);
        });
        function triggerImage() {
            $('.file-select').trigger('click');
        }
        function changeImage(event) {
            $('#image-name').html($('.file-select').val());
        }
    </script>
}


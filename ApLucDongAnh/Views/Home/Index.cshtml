                    <img src="~/Content/images/img-main/About us.svg" alt="About Us" />
                </div>
                <div class="title-section" data-aos="fade-up" data-aos-duration="700">
                    ÁP LỰC ĐÔNG ANH
                </div>
                @if (config.AboutText != null)
                {
                    <div class="about-us-content">

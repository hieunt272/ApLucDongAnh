@if (Model.Services.Any())
{
    <section class="services">
        <div class="bg-services">
            <div class="container">
                <div class="row">
                    <div class="col-lg-5">
                        <div class="text-section">
                            . Our Services
                        </div>
                        <div class="title-section">
                            CÁC DỊCH VỤ TỐT NHẤT
                        </div>
                        <a href="@Url.Action("AllService")" class="btn-main">
                            TÌM HIỂU THÊM
                            <svg viewBox="0 0 13 20">
                                <polyline points="0.5 19.5 3 19.5 12.5 10 3 0.5"></polyline>
                            </svg>
                            <span class="icon"><i class="fal fa-long-arrow-right"></i></span>
                        </a>
                    </div>
                    @if (config.ServiceText != null)
                    {
                        <div class="col-lg-7">
                            <div class="service-desc">
                                @Html.Raw(config.ServiceText)
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="service-list">
                @foreach (var item in Model.Services)
                {
                    <div class="service-item">
                        <a href="@Url.Action("ServiceDetail", new { url = item.Url })" class="service-item-link">
                            <div class="service-item-number">
                                0 @number
                            </div>
                            <div class="service-img">
                                @if (item.Image != null)
                                {
                                    <img data-src="@Path.Combine("/images/articles/", item.Image)" src="~/Content/images/img-main/base64.gif" alt="@item.Body" class="lazyload" />
                                }
                            </div>
                            <div class="content">
                                <div class="service-heading">
                                    <span>@item.Subject</span>
                                    <i class="fal fa-long-arrow-right"></i>
                                </div>
                                <div class="excerpt">
                                    @item.Description
                                </div>
                            </div>
                        </a>
                    </div>
                    number++;

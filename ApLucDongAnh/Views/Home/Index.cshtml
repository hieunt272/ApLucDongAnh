@if (Model.Banner != null)
{
    <section class="banner">
        @if (HtmlHelpers.CheckFileExt(Model.Banner.Image, "jpg|jpeg|png|gif"))
        {
            <img src="@Path.Combine("/images/banners/", Model.Banner.Image)" alt="@Model.Banner.BannerName" />
        }
        else
        {
            <video muted loop autoplay>
                <source src="@Path.Combine("/images/banners/", Model.Banner.Image)" type="video/mp4" alt="@Model.Banner.BannerName" />
            </video>
        }
        <div class="banner-content">
            <div class="banner-title">
                CHẾ TẠO NỒI HƠI <br />
                <span>CHUYÊN NGHIỆP HÀNG ĐẦU</span>
            </div>
            <a href="@Url.Action("Introduce")" class="banner-btn">
                <span class="position-relative">Giới thiệu</span>
                <span class="icon">
                    <i class="fal fa-long-arrow-right"></i>
                </span>
            </a>
        </div>
    </section>
}
<section class="container">
    <div class="numbers">
        <div class="number-item">
            <img src="~/Content/images/img-main/icon-number.png" class="number-img" />
            <div class="countup">
                <span class="number">30</span>+
            </div>
            <div class="number-name">
                Năm kinh nghiệm
            </div>
        </div>
        <div class="number-item">
            <img src="~/Content/images/img-main/icon-number (1).png" class="number-img" />
            <div class="countup">
                <span class="number">34</span>+
            </div>
            <div class="number-name">
                Tỉnh thành
            </div>
        </div>

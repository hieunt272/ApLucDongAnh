            <div class="countup">
                <span class="number">13000</span>+
            </div>
            <div class="number-name">
                Diện tích nhà máy
            </div>
        </div>
        <div class="number-item">
            <img src="~/Content/images/img-main/icon-number (3).png" class="number-img" />
            <div class="countup">
                <span class="number">1000</span>+
            </div>
            <div class="number-name">
                Dự án
            </div>
        </div>
    </div>
</section>
<section class="about-us">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="about-us-img">
                    @if (config.AboutImage != null)
                    {
                        <img data-src="@Path.Combine("/images/configs/", config.AboutImage)" src="~/Content/images/img-main/base64.gif" alt="Ảnh giới thiệu" class="lazyload" />
                    }
                    <div class="experience">
                        <div class="countup">
                            <span class="number">30</span>+
                        </div>
                        Chúng tôi có hơn 30 năm kinh nghiệm trong ngành thiết bị áp lực
                    </div>
                </div>
            </div>
            <div class="col-lg-6 d-flex flex-column justify-content-center">
                <div class="text-section">
                    . About us
                </div>
                <div class="title-section">
                    ÁP LỰC ĐÔNG ANH
                </div>
                @if (config.AboutText != null)
                {
                    <div class="about-us-content">
                        @Html.Raw(config.AboutText)
                    </div>
                }
                <a href="@config.AboutUrl" class="btn-main">
                    TÌM HIỂU THÊM
                    <svg viewBox="0 0 13 20">
                        <polyline points="0.5 19.5 3 19.5 12.5 10 3 0.5"></polyline>
                    </svg>
                    <span class="icon"><i class="fal fa-long-arrow-right"></i></span>
                </a>
            </div>
        </div>
    </div>
</section>
@if (Model.Projects.Any())
{
    <section class="project">
        <div class="container">
            <div class="decoration">
                <div class="decoration-container">
                    <div class="square"></div>
                    <div class="square"></div>
                </div>
            </div>
            <div class="project-heading">
                <div class="project-heading__left">
                    <div class="text-section">
                        . Projects
                    </div>
                    <div class="title-section">
                        Các dự án hoàn thành
                    </div>
                    <a href="@Url.Action("AllProject")" class="btn-main">
                        TÌM HIỂU THÊM
                        <svg viewBox="0 0 13 20">
                            <polyline points="0.5 19.5 3 19.5 12.5 10 3 0.5"></polyline>
                        </svg>
                        <span class="icon"><i class="fal fa-long-arrow-right"></i></span>
                    </a>
                </div>
                <div class="project-heading__right">
                    <div class="countup">
                        <span class="number">250</span>+
                    </div>
                    <div class="text-vertical">
                        Dự án đã<br />
                        Hoàn thành
                    </div>
                </div>
            </div>
        </div>
        <div class="project-list">
            @foreach (var item in Model.Projects)
            {
                <div class="project-item">
                    <a href="@Url.Action("ProjectDetail", new { url = item.Url })" class="project-item-link">
                        <span class="project-image">
                            @if (item.ListImage != null)
                            {
                                <img src="@Path.Combine("/images/projects/", item.ListImage.Split(',')[0])" alt="@item.ProjectName" />
                            }
                        </span>
                        <span class="body">
                            <span class="calendar">
                                <i class="far fa-calendar"></i>
                                @item.CreateDate.ToString("dd/MM/yyyy")
                            </span>
                            <span class="subject">
                                @item.ProjectName
                            </span>
                            <div class="desc truncate">
                                @item.Description
                            </div>
                            <span class="project-item-btn">
                                <i class="fal fa-long-arrow-right"></i>
                            </span>
                        </span>
                    </a>
                </div>
            }
        </div>
    </section>
}

@if (Model.Banners.Any(a => a.GroupId == 2))
{
    <section class="partner">
        <div class="container">
            <div class="text-center">
                <div class="text-section">
                    . Our Customers
                </div>
                <div class="title-section">
                    ĐỐI TÁC KHÁCH HÀNG
                </div>
            </div>
            <div class="partner-list">
                @foreach (var banner in Model.Banners.Where(a => a.GroupId == 2))
                {
                    <div class="partner-item">
                        <a href="@banner.Url">
                            @if (banner.Image != null)
                            {
                                <img data-src="@Path.Combine("/images/banners/", banner.Image)" src="~/Content/images/img-main/base64.gif" alt="@banner.BannerName" class="lazyload" />
                            }
                        </a>
                    </div>
                }
            </div>
        </div>
    </section>
}

@if (Model.Banners.Any(a => a.GroupId == 3))
{
    <section class="business-connect">
        <div class="container">
            <div class="text-center">
                <div class="text-section">
                    . Our Customers
                </div>
                <div class="title-section">
                    tổ chức kết nối kinh doanh
                </div>
            </div>
            <div class="row mt-lg-5">
                @foreach (var banner in Model.Banners.Where(a => a.GroupId == 3).Take(3))
                {
                    <div class="col-lg-4 d-flex justify-content-center">
                        <div class="bc-item">
                            <div class="bc-img">
                                @if (banner.Image != null)
                                {
                                    <img data-src="@Path.Combine("/images/banners/", banner.Image)" src="~/Content/images/img-main/base64.gif" alt="@banner.BannerName" class="lazyload" />
                                }
                            </div>
                            <a href="@banner.Url" class="bc-name">
                                @banner.BannerName
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

@if (Model.ProductCategories.Any())
{
    <section class="category-hot">
        <div class="container">
            <div class="text-center">
                <div class="text-section">
                    . Our Categories
                </div>
                <div class="title-section">
                    DANH MỤC SẢN PHẨM NỔI BẬT
                </div>
            </div>
            <div class="category-hot-list">
                @foreach (var category in Model.ProductCategories)
                {
                    <div class="category-item">
                        <a href="@Url.Action("ProductCategory", "Home", new { url = category.Url })" class="category-img">
                            @if (category.Image != null)
                            {
                                <img data-src="@Path.Combine("/images/productCategory/", category.Image)" src="~/Content/images/img-main/base64.gif" alt="@category.CategoryName" class="lazyload" />
                            }
                        </a>
                        <div class="body">
                            <a href="@Url.Action("ProductCategory", "Home", new { url = category.Url })" class="category-name">
                                @category.CategoryName
                            </a>
                            <div class="desc truncate" title="@category.Description">
                                @category.Description
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

@if (Model.Banners.Any(a => a.GroupId == 4))
{
    <section class="features">
        <div class="container">
            <div class="text-center">
                <div class="text-section">
                    . Features
                </div>
                <div class="title-section">
                    LỢI ÍCH CỦA CHÚNG TÔI
                </div>
            </div>
            <div class="row mt-4 pt-2">
                @foreach (var banner in Model.Banners.Where(a => a.GroupId == 4))
                {
                    <div class="col-lg-4 mb-lg-5">
                        <a href="@banner.Url" class="feature-item">
                            <div class="body">
                                @if (banner.Image != null)
                                {
                                    <img data-src="@Path.Combine("/images/banners/", banner.Image)" src="~/Content/images/img-main/base64.gif" alt="@banner.BannerName" class="lazyload" />
                                }
                                <div class="feature-name">
                                    @banner.BannerName
                                </div>
                            </div>
                            <div class="box-icon">
                                <i class="fal fa-long-arrow-right icon-feature__1"></i>
                                <i class="fal fa-long-arrow-right icon-feature__2"></i>
                            </div>
                        </a>
                    </div>

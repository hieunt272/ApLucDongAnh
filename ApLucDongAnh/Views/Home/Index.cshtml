@if (Model.Articles.Any() || Model.Banners.Any(a => a.GroupId == 5))
{
    <section class="news">
        <div class="container">
            <div class="text-center">
                <div class="text-section">
                    . News
                </div>
                <div class="title-section">
                    TIN TỨC SỰ KIỆN
                </div>
            </div>
            <div class="row mt-lg-5">
                <div class="col-lg-6">
                    <div class="news-list">
                        @foreach (var item in Model.Articles)
                        {
                            <div class="news-item">
                                <a href="@Url.Action("ArticleDetail", new { url = item.Url })" class="news-img">
                                    @if (item.Image != null)
                                    {
                                        <img data-src="@Path.Combine("/images/articles/", item.Image)" src="~/Content/images/img-main/base64.gif" alt="@item.Subject" class="lazyload" />
                                    }
                                </a>
                                <div class="body">
                                    <div class="subject truncate">
                                        <a href="@Url.Action("ArticleDetail", new { url = item.Url })" title="@item.Subject">
                                            @item.Subject
                                        </a>
                                    </div>
                                    <div class="desc truncate">
                                        @item.Description
                                    </div>
                                    <div class="calendar">
                                        <i class="far fa-calendar"></i>
                                        @item.CreateDate.ToString("dd/MM/yyyy")
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="video-slide">
                        <div class="video-slider-for">
                            @foreach (var banner in Model.Banners.Where(a => a.GroupId == 5))
                            {
                                if (banner.Url != null)
                                {
                                    var ytId = HtmlHelpers._pegarIDYoutube(banner.Url);
                                    <a href="@banner.Url" data-fancybox="gallery" class="video-for-item">
                                        <img data-src="https://i.ytimg.com/vi_webp/@ytId/maxresdefault.webp" src="~/Content/images/img-main/base64.gif" class="lazyload video-img" alt="@banner.BannerName">
                                        <img src="~/Content/images/img-main/play.png" alt="Play" class="play" />
                                    </a>
                                }
                                else
                                {
                                    <a href="@Path.Combine("/images/banners/", banner.Image)" data-fancybox="gallery" class="video-for-item">
                                        @if (banner.Image != null)
                                        {
